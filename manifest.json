{
  "manifest_version": 3,
  "name": "BlueDragon Web Security",
  "short_name": "BlueDragon",
  "version": "1.0.0",
  "description": "Security scanner for bug bounty hunters - detects vulnerabilities in SSR frameworks (Next.js, Angular, SvelteKit, Nuxt)",
  "author": "fbettag",
  "homepage_url": "https://github.com/fbettag/bluedragon-web-security",
  "minimum_chrome_version": "110",
  "offline_enabled": false,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "BlueDragon Web Security"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications",
    "alarms",
    "webRequest",
    "webNavigation",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "injected/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
